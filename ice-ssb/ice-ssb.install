post_install(){
sudo ln -s /usr/bin/chromium /usr/bin/chromium-browser
sudo ln -s /usr/bin/google-chrome-beta /usr/bin/google-chrome
}

post_upgrade(){
sudo ln -s /usr/bin/chromium /usr/bin/chromium-browser
sudo ln -s /usr/bin/google-chrome-beta /usr/bin/google-chrome
}

post_remove(){
rm /usr/bin/ice
rm /usr/share/pixmaps/ice.png
rm /usr/share/applications/ice.desktop
}
